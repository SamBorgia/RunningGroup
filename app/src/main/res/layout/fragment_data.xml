<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.runninggroup.viewAndController.MainInterface">

    <TextView
        android:id="@+id/data_running"
        android:text="七日跑步数据"
        android:textSize="20dp"
        android:fontFamily="sans-serif-black"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="100dp">

    </TextView>

    <com.example.runninggroup.viewAndController.EchartView
        android:id="@+id/chart01"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </com.example.runninggroup.viewAndController.EchartView>

    <com.example.runninggroup.viewAndController.EchartView
        android:id="@+id/chart02"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="200dp"></com.example.runninggroup.viewAndController.EchartView>


</LinearLayout>