<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.runninggroup">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".viewAndController.TestActivity"></activity>
        <activity android:name=".viewAndController.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".viewAndController.Register" />
        <activity android:name=".viewAndController.MainInterface" />
        <activity android:name=".viewAndController.FriendMessage" />
        <activity android:name=".viewAndController.GroupMessage" />
        <activity android:name=".viewAndController.GroupBuild" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>